<?xml version="1.0"?>
<!DOCTYPE MultipleViewConfigs SYSTEM "MultipleViewConfigs.dtd">

<!-- See DTD for documentation -->
<MultipleViewConfigs>

  <Config
    Name="Vedic Simple"
    Description="All you really need: planets, Rasi, Navamsa and Dasa tree">
    <Window>
      <Splitter>
        <SplitDirection>Vertical</SplitDirection>
        <SashPosPercent>30</SashPosPercent>
        <Window1>
          <Widget>
            <ViewType>GridView</ViewType>
            <Vedic>true</Vedic>
          </Widget>
        </Window1>
        <Window2>
          <Splitter>
            <SplitDirection>Vertical</SplitDirection>
            <SashPosPercent>50</SashPosPercent>
            <Window1>
              <Widget>
                <ViewType>GraphicGridView</ViewType>
                <RowCount>2</RowCount>
                <ColCount>1</ColCount>
                <Vedic>true</Vedic>
                <VargaList>
                  <VargaItem>0</VargaItem>
                  <VargaItem>1</VargaItem>
                </VargaList>
              </Widget>
            </Window1>
            <Window2>
              <Widget>
                <ViewType>DasaView</ViewType>
              </Widget>
            </Window2>
          </Splitter>
        </Window2>
      </Splitter>
    </Window>
  </Config>

